[general]
import = ["~/.config/alacritty/themes/{{ .chezmoi.config.data.theme }}.toml"]

live_config_reload = true
ipc_socket = true

[window]
opacity = 0.7
padding = { x = 4, y = 4 }

[font]
normal = { family = "GeistMono Nerd Font", style = "Regular" }
size = 8

[mouse]
hide_when_typing = true

[cursor]
style = { shape = "Beam", blinking = "Off" }
